@model List<Category>
<div class="container">
    <h1>Category</h1>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <a class="btn btn-success"  asp-area="Admin" asp-controller="Category" asp-action="Create">Create</a>

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                
                            <tr>
                                <td class="py-1">
                                    <img src="~/assets/images/@item.Image" alt="image" />
                                </td>
                                <td>
                                   @item.Name
                                </td>
                                <td>
                                    <a class="btn btn-info" asp-area="Admin" asp-controller="Category" asp-route-id ="@item.Id"  asp-action="Detail">Detail</a>
                                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Category" asp-route-id="@item.Id" asp-action="Edit">Edit</a>
                                        <form method="post" asp-area="Admin" asp-controller="Category" asp-route-id="@item.Id" asp-action="Delete">
                                            <button class="btn btn-danger d-inline-block">Delete</button>

                                        </form>
                                </td>

                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
