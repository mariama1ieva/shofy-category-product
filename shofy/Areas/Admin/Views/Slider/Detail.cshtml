@model SliderSliderInfo
@{
    ViewData["Title"] = "Detail";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk=" crossorigin="anonymous" />
<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="project-info-box mt-0">
                <h5>SLider DETAILS</h5>
            </div><!-- / project-info-box -->

            <div class="project-info-box">
                <p><b>Title:</b>@Model.Title</p>
                <p><b>Description:</b>@Model.Description</p>
              
            </div><!-- / project-info-box -->

           
        </div><!-- / column -->

        <div class="col-md-7">
            <img src="~/assets/images/@Model.Image" alt="project-image" class="rounded">
            
        </div><!-- / column -->
    </div>
    <a class="btn btn-primary" asp-area="Admin" asp-controller="Slider" asp-action="Index">Back</a>
</div>

